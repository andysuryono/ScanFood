<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="@color/colorWhite"
    tools:context="id.ac.unsyiah.scanfood.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/front_bg">

        <ImageView
            android:paddingLeft="-16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_front_bg"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="-250dp"
            android:layout_height="250dp"
            android:background="@drawable/gradient_transparant_white" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scanfood"
        android:layout_alignBottom="@+id/front_bg"
        android:layout_centerHorizontal="true"
        android:id="@+id/front_app_name"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:text="@string/app_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/front_app_desc" />



</RelativeLayout>
